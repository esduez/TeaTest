name: Release Build

on:
  push:
    tags: ['v*.*.*']

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-go@v4
        with:
          go-version: '1.21'
      - run: |
          chmod +x build/release.sh
          ./build/release.sh
      - uses: actions/upload-artifact@v3
        with:
          name: teatest-binaries
          path: |
            release/*
            !release/*.sha256
