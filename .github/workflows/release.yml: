name: Release

on:
  push:
    tags: ['v*']

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Set up Go
        uses: actions/setup-go@v3
        with:
          go-version: '1.20'
          
      - name: Build
        run: |
          chmod +x build/release.sh
          ./build/release.sh
          
      - name: Upload Artifacts
        uses: actions/upload-artifact@v3
        with:
          path: release/*
